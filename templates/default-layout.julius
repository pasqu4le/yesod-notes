$(function() {
  // On mobile toggles the navbar menu by clicking on the burger
  $(".navbar-burger").click(function() {
    $( ".navbar-burger" ).toggleClass( "is-active" );
    $( ".navbar-menu" ).toggleClass( "is-active" );
  });
  // closes notifications when clicking on button
  $("button.delete").click(function() {
    $( event.target ).parent( ".notification" ).remove();
  });
});
